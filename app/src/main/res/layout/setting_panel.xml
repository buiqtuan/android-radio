<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_panel_view"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/background_setting_panel"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/set_timer_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/alarm_icon" />

    <ImageButton
        android:id="@+id/refresh_app_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/refresh_icon" />

    <ImageButton
        android:id="@+id/rate_app_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/star_icon" />

</LinearLayout>