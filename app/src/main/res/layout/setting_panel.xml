<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_panel_view"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/background_setting_panel"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/change_country_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/world_icon" />

    <ImageButton
        android:id="@+id/set_timer_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/alarm_icon" />

    <ImageButton
        android:id="@+id/refresh_app_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/refresh_icon" />

    <ImageButton
        android:id="@+id/back_to_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_icon" />
</LinearLayout>